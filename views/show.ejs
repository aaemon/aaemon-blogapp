<%- include("./partials/header"); %>

<div class="ui main text container segment">
	<div class="ui huge header"> <%= blog.title %></div>
	<div class="ui top attached">
		<div class="item">
			<img src=" <%= blog.image %>" class="ui centered rounded image">
			<div class="content">
				<span> <%= blog.created.toDateString() %> </span>
			</div>
			<div class="description">
				<p> <%- blog.body %> </p>
			</div>
			<div class="btns">
				<a href="/blogs/<%= blog._id %>/edit" class="ui blue button"><i class="icon edit" id="editbtn"></i></a>
				<form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE"method="POST">
					<button class="ui red button"><i class="icon trash alternate" id="deletebtn"></i></button>
				</form>
			</div>
			
		</div>
	</div>
</div>

<%- include("./partials/header"); %>